<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navi"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/drawablemenu"
        android:layout_gravity="end"
        app:headerLayout="@layout/header"
        app:itemIconTint="#28b180"
        android:id="@+id/nav_view">

    </android.support.design.widget.NavigationView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rine_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linear">

            <Button
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/back"
                android:contentDescription="@string/todo"
                android:onClick="back"/>

            <TextView
                android:id="@+id/imagerine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginTop="11dp"
                android:text="Cart"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:fontFamily="sans-serif-smallcaps"
                android:contentDescription="@string/todo" />



            <Button
                android:id="@+id/hamburger"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ham"
                android:layout_marginTop="8dp"
                android:onClick="drawerclick"/>

        </RelativeLayout>



        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear"
            android:layout_marginTop="20dp"
            android:layout_above="@id/t_price"
            android:layout_marginBottom="20dp"

            >
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                    </android.support.v7.widget.RecyclerView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rela"
                        android:layout_alignParentBottom="true">


                    </RelativeLayout>



                </RelativeLayout>


            </android.support.v7.widget.CardView>



        </android.support.v4.widget.SwipeRefreshLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/roundedbutton"
            android:text="Checkout"
            android:backgroundTint="#000000"
            android:textColor="#ffffff"
            android:fontFamily="@font/montserrat"
            android:textSize="15sp"
            android:id="@+id/checkout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:layout_above="@id/checkout"
            android:layout_marginBottom="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:id="@+id/t_price"
            android:textColor="#ffffff"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_centerHorizontal="true"
            android:id="@+id/equal"
            android:layout_above="@id/checkout"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:textColor="#ffffff"
            android:textSize="18sp"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/checkout"
            android:layout_marginBottom="10dp"
            android:id="@+id/price_set"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:textColor="#ffffff"
            />





    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>