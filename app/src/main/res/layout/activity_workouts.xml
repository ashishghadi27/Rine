<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navi"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/drawablemenu"
        android:layout_gravity="end"
        app:headerLayout="@layout/header"
        app:itemIconTint="#28b180">

    </android.support.design.widget.NavigationView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rine_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linear">

            <Button
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/back"
                android:contentDescription="@string/todo"
                android:onClick="back"/>

            <TextView
                android:id="@+id/imagerine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="11dp"
                android:text="Workout Plans"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                android:fontFamily="sans-serif-smallcaps"
                android:contentDescription="@string/todo" />

            <Button
                android:id="@+id/store"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="80dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/storeicon1" />

            <Button
                android:id="@+id/hamburger"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ham"
                android:layout_marginTop="8dp"
                android:onClick="drawerclick"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dayplanlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear"
            >
            <TextView
                android:id="@+id/dayplans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D A Y    P L A N S"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/cardview_light_background"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:id="@+id/b14"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@id/dayplans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/workoutback"
                android:text="14"
                android:textSize="30sp"
                android:fontFamily="sans-serif"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@id/dayplans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/workoutback"
                android:text="7"
                android:hint="DAY PLAN"
                android:textColorHint="#28b180"
                android:layout_toStartOf="@id/b14"
                android:layout_marginEnd="20dp"
                android:textSize="30sp"
                android:fontFamily="sans-serif"
                android:onClick="loadseven"

                />

            <Button
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@id/dayplans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/workoutback"
                android:text="21"
                android:layout_toEndOf="@id/b14"
                android:layout_marginStart="20dp"
                android:textSize="30sp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/marathonplans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M A R A T H O N"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:textColor="@color/cardview_light_background"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/b14"

                />

            <Button
                android:id="@+id/b300"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@id/marathonplans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/workoutback"
                android:text="300"
                android:textSize="30sp"
                android:fontFamily="sans-serif"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@id/marathonplans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/workoutback"
                android:text="100"
                android:hint="DAY PLAN"
                android:textColorHint="#28b180"
                android:layout_toStartOf="@id/b14"
                android:layout_marginEnd="20dp"
                android:textSize="30sp"
                android:fontFamily="sans-serif"


                />

            <Button
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_below="@id/marathonplans"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/workoutback"
                android:text="500"
                android:layout_toEndOf="@id/b14"
                android:layout_marginStart="20dp"
                android:textSize="30sp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/yoga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y O G A"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:textColor="@color/cardview_light_background"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/b300"

                />





        </RelativeLayout>






    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>

